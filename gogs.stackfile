gogs:
  image: 'gogs/gogs:latest'
  mem_limit: 256m
  ports:
    - '10022:22'
    - '10080:3000'
  volumes:
    - '/var/gogs/data:/data'
mysql:
  image: 'tutum/mysql:latest'
  environment:
    - MYSQL_PASS=gogs$$password
    - MYSQL_USER=gogs
    - ON_CREATE_DB=gogs
  mem_limit: 256m
  restart: always
  volumes:
    - '/var/gogs/mysql:/var/lib/mysql'
